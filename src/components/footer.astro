---
import { Icon } from "astro-icon/components";
const lang = Astro.url.pathname.startsWith('/ko') ? 'ko' : 'en';
---

<footer class="my-20 px-4 text-center text-sm text-slate-500 space-y-4">
  <p>
    © {new Date().getFullYear()} Namdarine. All rights reserved.
  </p>

  <p class="text-xs sm:text-sm text-slate-400">
    Built with ✦ Astro & Tailwind. Theme by 
    <a
      href="https://web3templates.com"
      target="_blank"
      rel="noopener"
      class="hover:underline"
    >
      Web3Templates
    </a>
  </p>

  <!-- SNS Links with Icons and Bigger Text -->
  <div class="flex flex-wrap justify-center gap-4 sm:gap-6 text-base text-slate-600 mt-4 font-medium">
    <a href="https://github.com/namdarine" class="flex items-center space-x-2 hover:text-black transition" target="_blank">
      <Icon name="mdi:github" class="w-5 h-5" />
      <span>GitHub</span>
    </a>
    <a href="https://medium.com/@namdarine" class="flex items-center space-x-2 hover:text-black transition" target="_blank">
      <Icon name="ri:medium-fill" class="w-5 h-5" />
      <span>Medium</span>
    </a>
    
    {lang === 'ko' ? (
      <>
        <a href="/ko/terms" class="flex items-center space-x-2 hover:text-black transition">
          <Icon name="mdi:file-document-outline" class="w-5 h-5" />
          <span>이용약관</span>
        </a>
        <a href="/ko/privacy" class="flex items-center space-x-2 hover:text-black transition">
          <Icon name="mdi:shield-lock-outline" class="w-5 h-5" />
          <span>개인정보처리방침</span>
        </a>
      </>
    ) : (
      <>
        <a href="/terms" class="flex items-center space-x-2 hover:text-black transition">
          <Icon name="mdi:file-document-outline" class="w-5 h-5" />
          <span>Terms</span>
        </a>
        <a href="/privacy" class="flex items-center space-x-2 hover:text-black transition">
          <Icon name="mdi:shield-lock-outline" class="w-5 h-5" />
          <span>Privacy</span>
        </a>
      </>
    )}
  </div>
</footer>